<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".radioButton">

    <FrameLayout
        android:id="@+id/rtbn_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/rtbn_bottom_nav"
        android:layout_alignParentTop="true"
        android:layout_weight="1" />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/rtbn_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>